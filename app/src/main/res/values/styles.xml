<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <!--my styles-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Options menu -->
        <!--        <item name="android:actionOverflowMenuStyle">@style/OptionsMenuTheme</item>-->
        <!--        <item name="actionOverflowMenuStyle">@style/OptionsMenuTheme</item>-->
        <!--        <item name="panelBackground">@color/white</item>-->
        <!--        <item name="actionBarItemBackground">@color/white</item>-->
        <!--        <item name="android:itemBackground">@color/white</item>-->
        <!--        <item name="android:popupBackground">@color/red</item>-->

    </style>


    <!--toolbar theme-->
    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/shape_button_orange</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--    <style name="OptionsMenuTheme"  parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <!--        <item name="android:itemBackground">@color/white</item>-->
    <!--        <item name="android:background">@color/white</item>-->
    <!--        <item name="android:popupBackground">@color/white</item>-->
    <!--        <item name="android:colorBackground">@color/white</item>-->
    <!--    </style>-->


    <style name="RoundButton" parent="Base.Widget.AppCompat.Button">
        <!--<item name="android:background">@drawable/button_round_themed</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/shape_button_rounded_orange</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/_13sdp</item>

    </style>

    <style name="RoundButtonTextView" parent="TextViewWhite.VerySmall">
        <!--<item name="android:background">@drawable/button_round_themed</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/shape_button_rounded_orange</item>
        <item name="android:layout_marginBottom">20dp</item>


    </style>


    <style name="TextViewWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewWhite.VerySmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewHeading">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

    </style>

    <style name="TextViewNormal">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">3dp</item>

    </style>


    <style name="TextViewSubHeadingAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="TextViewHeadingWhite" parent="TextViewHeading">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSubHeadingWhite" parent="TextViewSubHeadingAccent">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextViewSubHeadingBlack" parent="TextViewSubHeadingAccent">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_top_down</item>
        <!--<item name="android:windowExitAnimation">@anim/slide_up</item>-->
    </style>

    <style name="DialogSlideAnimStyle" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <declare-styleable name="AutoViewPager">
        <attr name="avp_indeterminate" format="boolean" />
        <attr name="avp_autoScroll" format="boolean" />
        <attr name="avp_duration" format="integer" />
    </declare-styleable>

    <style name="RatingBarSmall" parent="android:Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="custom_ratingBar" parent="RatingBarSmall">
        <item name="srb_isIndicator">true</item>
        <item name="srb_borderColor">@color/theme_orange</item>
        <item name="srb_fillColor">@color/theme_orange</item>
        <item name="android:maxWidth">@dimen/_80sdp</item>
        <item name="srb_stepSize">0.5</item>


    </style>



</resources>
