<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/service_detail_container_margin_small"
    android:paddingTop="@dimen/service_detail_container_margin"
    android:paddingEnd="@dimen/service_detail_container_margin_small"
    android:paddingBottom="@dimen/service_detail_container_margin">

    <TextView
        android:id="@+id/package_timing"
        style="@style/TextViewWhite.VerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/gray_dark" />

    <TextView
        style="@style/TextViewWhite.VerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dotted_orange"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/theme_orange"
        android:visibility="gone" />

    <TextView
        android:id="@+id/package_price"
        style="@style/TextViewWhite.VerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/theme_orange" />

    <TextView
        android:id="@+id/book_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_orange"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text=""
        android:textColor="@color/white" />

</LinearLayout>