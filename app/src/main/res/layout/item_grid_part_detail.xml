<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/part_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/category_margin"
    android:layout_marginTop="@dimen/category_padding"
    android:layout_marginEnd="@dimen/category_padding"
    android:background="@color/white_100"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/category_padding">

    <ImageView
        android:id="@+id/part_image"
        android:layout_width="@dimen/n3_category_img_width"
        android:layout_height="@dimen/n3_category_img_width"
        android:src="@drawable/no_image_placeholder" />

    <TextView
        android:id="@+id/part_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/category_margin"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="3"
        android:textColor="@color/black" />

</LinearLayout>
