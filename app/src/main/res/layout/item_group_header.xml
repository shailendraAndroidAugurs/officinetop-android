<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/category_margin"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/category_padding">

        <ImageView
            android:id="@+id/sub_category_image"
            android:layout_width="@dimen/sub_category_img_width"
            android:layout_height="@dimen/sub_category_img_width"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/category_padding"
            android:src="@drawable/no_image_placeholder" />


        <ImageView
            android:id="@+id/group_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/drop_down_arrow" />

        <TextView
            android:id="@+id/sub_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/category_margin"
            android:layout_toStartOf="@id/group_indicator"
            android:layout_toEndOf="@+id/sub_category_image"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>
