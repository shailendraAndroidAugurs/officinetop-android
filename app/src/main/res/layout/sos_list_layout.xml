<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wracker_services_rl"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/_2sdp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/_2sdp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/workshop_images"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/workshop_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:layout_toEndOf="@+id/workshop_images"
        android:layout_weight="3"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/workshop_emergency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/workshop_name"
        android:layout_weight="2.5"
        android:background="@drawable/shape_rectangle_orange_filled"
        android:text="@string/Emergency"
        android:textAllCaps="false"
        android:textSize="@dimen/_9sdp" />

    <Button
        android:id="@+id/workshop_appointment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/workshop_emergency"
        android:layout_weight="2.5"
        android:background="@drawable/shape_rectangle_orange_filled"
        android:text="@string/Appointment"
        android:textAllCaps="false"
        android:textSize="@dimen/_8sdp" />


</LinearLayout>