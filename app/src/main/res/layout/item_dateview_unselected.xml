<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/item_text_top"
        style="@style/TextViewWhite.VerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/concat"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_text_middle"
        style="@style/TextViewWhite.VerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_button_rounded_orange"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/concat" />

    <TextView
        android:id="@+id/item_text_bottom"
        style="@style/TextViewWhite.VerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/concat"
        android:textColor="@color/black" />


</LinearLayout>