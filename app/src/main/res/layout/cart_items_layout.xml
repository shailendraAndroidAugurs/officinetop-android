<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_white_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/cart_item_product_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:weightSum="8">
                <ImageView
                    android:id="@+id/cart_item_product_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:src="@drawable/no_image_placeholder" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cart_item_product_name"
                            style="@style/TextViewHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="left"
                            android:padding="0dp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_delete_white_24dp"
                            android:tint="@color/gray_dark"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/cart_item_product_description"
                        style="@style/TextViewHeading"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="0dp"
                        android:textColor="@color/gray_dark" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/service_detail_container_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="5"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:background="@drawable/shape_rectangle_gray">

                                <Spinner
                                    android:id="@+id/cart_product_qty_spinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:visibility="visible"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:id="@+id/ll_Product_prices"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/price"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/cart_item_product_price"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/ZeroValue"
                                        android:gravity="center"
                                        android:textColor="@color/theme_orange"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/total"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/ZeroValue"
                                        android:id="@+id/tv_ProductTotal"
                                        android:gravity="center"
                                        android:textColor="@color/theme_orange"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <!--<TextView
                            android:id="@+id/cart_item_product_price"
                            style="@style/TextViewHeadingWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="0dp"
                            android:textColor="@color/theme_orange"
                            android:textSize="12sp" />-->
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_coupon_cart"
                            android:layout_width="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/green"
                            android:textStyle="bold"

                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">


                        </TextView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_product_Vat"
                        android:text="@string/zero"
                        android:textColor="@color/theme_orange"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_height="wrap_content">

                    </TextView>

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--<TextView
                            android:id="@+id/tv_Pfu_label"
                            android:text="@string/PFU_Description"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                        </TextView>-->
                        <TextView
                            android:id="@+id/tv_pfutext"
                            android:text="@string/PFU"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_labeldiscount"
                            android:text="@string/Discount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_ProductPFU"
                            android:text="@string/zero"
                            android:textColor="@color/theme_orange"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_ProductDiscount"
                            android:text="@string/zero"
                            android:textColor="@color/theme_orange"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_IsStockavailable_Product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"

                        android:textStyle="bold"
                        android:textColor="@color/color4"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_item_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/rounded_white_background"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/service_detail_container_margin_large"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">


                    <ImageView
                        android:id="@+id/cart_item_service_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/no_image_placeholder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp">


                        <TextView
                            android:id="@+id/cart_service_name"
                            style="@style/TextViewHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text=""
                            android:textColor="@color/black" />


                        <TextView
                            style="@style/TextViewHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/service_detail_container_margin_large"
                            android:gravity="center"
                            android:padding="0dp"
                            android:paddingStart="@dimen/service_detail_container_margin_large"
                            android:text="@string/plus"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_partInfo"
                        android:text="@string/partinfo"
                        android:visibility="gone"
                        android:paddingRight="@dimen/_20sdp"
                        android:textColor="@color/lite_blue"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/cart_item_workshop_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/service_detail_container_margin_small"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/no_image_placeholder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/cart_item_workshop_name"
                            style="@style/TextViewHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/cart_item_workshop_registered_office"
                                style="@style/TextViewWhite.VerySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="start"
                                android:padding="0dp"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/gray_dark" />

                            <TextView
                                android:visibility="invisible"
                                style="@style/TextViewWhite.VerySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cart_item_workshop_registered_office"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="end"
                                android:padding="0dp"
                                android:text="@string/zero"
                                android:textColor="@color/theme_orange" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/price"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_discount"
                                android:visibility="gone"
                                android:text="@string/Discount"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:text="@string/total"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cart_item_assemble_service_price"
                                android:text="@string/zero"
                                android:textColor="@color/theme_orange"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_servicesVat"
                                android:text="@string/zero"
                                android:visibility="gone"
                                android:textColor="@color/theme_orange"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_services_TotalPrices"
                                android:text="@string/zero"
                                android:textColor="@color/theme_orange"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                style="@style/TextViewWhite.VerySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="0dp"
                                android:text="@string/Intervention_date"
                                android:textColor="@color/gray_dark" />

                            <TextView
                                android:id="@+id/cart_item_workshop_booking_date"
                                style="@style/TextViewWhite.VerySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="end"
                                android:padding="0dp"
                                android:text=""
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                style="@style/TextViewWhite.VerySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:padding="0dp"
                                android:text="@string/Intervention_time"
                                android:textColor="@color/gray_dark" />

                            <TextView
                                android:id="@+id/cart_item_booking_selected_time"
                                style="@style/TextViewWhite.VerySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="end"
                                android:padding="0dp"
                                android:text=""
                                android:textColor="@color/black" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_height="wrap_content">


                            <TextView
                                android:textColor="@color/green"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:id="@+id/tv_coupon_cart_services"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content">


                            </TextView>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/cart_selected_car_name"
                            style="@style/TextViewWhite.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_IsStockavailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/color4"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:src="@drawable/ic_delete_white_24dp"
                android:tint="@color/gray_dark" />
        </LinearLayout>


    </FrameLayout>

</LinearLayout>

