<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/ic_person_gray_24dp"
            app:civ_border_width="0.1dp"
            android:id="@+id/item_profile_image_view"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewHeading"
            android:padding="0dp"
            android:id="@+id/item_user_name"
            android:text="@string/sample_title"
            />

            <com.officinetop.officine.utils.CustomRatingBar
                style="@style/customratingBar"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:id="@+id/item_rating"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/TextViewSubHeadingBlack"
                android:padding="0dp"
                android:text="@string/officine_feedback"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewSubHeadingBlack"
                android:padding="0dp"
                android:id="@+id/item_name"
                android:text="@string/sample_title"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewSubHeadingBlack"
            android:textColor="@color/gray_dark"
            android:padding="2dp"
            android:id="@+id/item_date"
            android:text="@string/sample_title"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewHeading"
        android:text="@string/sample_title"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/gray_dark"
        android:id="@+id/item_review"
        />


    <include layout="@layout/layout_recycler_view"/>

</LinearLayout>